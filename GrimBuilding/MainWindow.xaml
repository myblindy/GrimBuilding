<Window x:Class="GrimBuilding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:GrimBuilding"
        xmlns:vm="clr-namespace:GrimBuilding.ViewModels" 
        xmlns:converters="clr-namespace:GrimBuilding.Converters"
        Title="MainWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen" x:Name="RootWindow">
    <Window.Resources>
        <converters:ImageFromDatabaseStringConverter x:Key="ImageFromDatabaseStringConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <ItemsControl ItemsSource="{Binding PlayerClass.Skills}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <Canvas/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Vertical">
                    <Image>
                        <Image.Source>
                            <MultiBinding Converter="{StaticResource ImageFromDatabaseStringConverter}">
                                <Binding Path="BitmapUpPath"/>
                                <Binding Path="DataContext.MainDatabase" ElementName="RootWindow"/>
                            </MultiBinding>
                        </Image.Source>
                    </Image>
                    <TextBlock HorizontalAlignment="Center">
                        <Run Text="0 / "/>
                        <Run Text="{Binding MaximumLevel}"/>
                    </TextBlock>
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
        <ItemsControl.ItemContainerStyle>
            <Style>
                <Setter Property="Canvas.Left" Value="{Binding PositionX}"/>
                <Setter Property="Canvas.Top" Value="{Binding PositionY}"/>
            </Style>
        </ItemsControl.ItemContainerStyle>
    </ItemsControl>
</Window>
