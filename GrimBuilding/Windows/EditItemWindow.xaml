<reactiveui:ReactiveWindow x:Class="GrimBuilding.Windows.EditItemWindow"
                           x:TypeArguments="vm:EditItemWindowViewModel"
                           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                           xmlns:reactiveui="http://reactiveui.net"
                           xmlns:vm="clr-namespace:GrimBuilding.ViewModels" 
                           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:local="clr-namespace:GrimBuilding.Windows"
                           Title="Edit Item">

    <StackPanel Orientation="Vertical">
        <TextBlock>Item:</TextBlock>
        <ComboBox ItemsSource="{Binding AllItems}" SelectedItem="{Binding Item}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </StackPanel>
</reactiveui:ReactiveWindow>
