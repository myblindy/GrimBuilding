[*.cs]

# CA1307: Specify StringComparison
dotnet_diagnostic.CA1307.severity = none

# CA1031: Do not catch general exception types
dotnet_diagnostic.CA1031.severity = none

# IDE0040: Add accessibility modifiers
dotnet_style_require_accessibility_modifiers = for_non_interface_members:none

# CA1305: Specify IFormatProvider
dotnet_diagnostic.CA1305.severity = none

# CA1720: Identifier contains type name
dotnet_diagnostic.CA1720.severity = none

# CA1819: Properties should not return arrays
dotnet_diagnostic.CA1819.severity = none

# CA1812: MainWindowViewModel is an internal class that is apparently never instantiated. If so, remove the code from the assembly. If this class is intended to contain only static members, make it static (Shared in Visual Basic).
dotnet_diagnostic.CA1812.severity = none

# CA1062: Validate arguments of public methods
dotnet_diagnostic.CA1062.severity = none

dotnet_diagnostic.CA1002.severity = none

# IDE0011: Add braces
csharp_prefer_braces = false

# IDE0022: Use block body for methods
csharp_style_expression_bodied_methods = true

# IDE0008: Use explicit type
csharp_style_var_when_type_is_apparent = true
csharp_style_var_elsewhere = true
csharp_style_var_for_built_in_types = true